{
  "name": "playwright_cucumber",
  "version": "1.0.0",
  "description": "Playwright BDD framework with Cucumber and Allure",
  "main": "index.js",
  "scripts": {
    "test:bdd": "cucumber-js --config cucumber.js",
    "test:bdd:headless": "HEADLESS=true cucumber-js --config cucumber.js",
    "test:tags": "cucumber-js --config cucumber.js --tags",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "postinstall": "playwright install"
  },
  "keywords": [
    "playwright",
    "cucumber",
    "bdd",
    "automation",
    "allure"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.10",
    "allure-commandline": "^2.36.0",
    "allure-cucumberjs": "^3.4.5"
  },
  "dependencies": {
    "@cucumber/cucumber": "^12.6.0",
    "dotenv": "^17.2.3"
  }
}
